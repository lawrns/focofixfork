    {
      "scenario_id": "TS007",
      "name": "Project Bulk Operations - Archive",
      "priority": "HIGH",
      "steps": [
        {
          "step": 1,
          "action": "Navigate to /projects",
          "expected": "Projects list loads"
        },
        {
          "step": 2,
          "action": "Select checkbox on one or more projects",
          "expected": "Bulk actions toolbar appears with Team, Archive, Delete, Cancel buttons"
        },
        {
          "step": 3,
          "action": "Click 'Archive' button",
          "expected": "Archive confirmation dialog opens"
        },
        {
          "step": 4,
          "action": "Read dialog: 'Mark selected projects as completed. They will be hidden from active views.'",
          "expected": "Dialog shows correct message and project count"
        },
        {
          "step": 5,
          "action": "Click 'Archive X Projects' button",
          "expected": "Projects archived, dialog shows progress, then success message"
        },
        {
          "step": 6,
          "action": "Verify archived projects removed from active list",
          "expected": "Archived projects no longer visible in default view"
        }
      ]
    },

    {
      "scenario_id": "TS008",
