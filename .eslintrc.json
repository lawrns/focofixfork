{
  "extends": "next/core-web-vitals",
  "rules": {
    "@typescript-eslint/no-use-before-define": "off",
    "react-hooks/exhaustive-deps": "warn",
    "jsx-a11y/alt-text": "warn",
    "no-restricted-syntax": [
      "error",
      {
        "selector": "Literal[value=/x-user-id/i]",
        "message": "‚ùå SECURITY: Identity must come from Supabase session via requireAuth(), not custom headers. Use wrapRoute() pattern for all API routes."
      }
    ]
  },
  "ignorePatterns": ["tests/", "**/*.test.ts", "**/*.test.tsx", "**/*.spec.ts", "**/*.spec.js", "scripts/"]
}
