  "test_scenarios": [
    {
      "scenario_id": "TS001",
      "name": "Homepage and PWA Installation",
      "priority": "HIGH",
      "steps": [
        {
          "step": 1,
          "action": "Navigate to https://foco.mx",
          "expected": "Homepage loads successfully with hero section visible"
        },
        {
          "step": 2,
          "action": "Scroll down to 'Instala Foco' section",
          "expected": "PWA installation section visible with 'Progressive Web App • Sin tiendas de apps' subtitle"
        },
        {
          "step": 3,
          "action": "On mobile: Click 'Instalar Foco' button",
          "expected": "PWA install prompt appears OR manual instructions shown for iOS"
        },
        {
          "step": 4,
          "action": "Click 'Comenzar gratis' button in hero",
          "expected": "Redirects to /register page"
        },
        {
          "step": 5,
          "action": "Click 'Iniciar sesión' in navigation",
          "expected": "Redirects to /login page"
        },
        {
          "step": 6,
          "action": "Click 'Características' link",
          "expected": "Scrolls to features section smoothly"
        },
        {
          "step": 7,
          "action": "Click 'Precios' link",
          "expected": "Scrolls to pricing section smoothly"
        }
      ]
    },

