        },
        {
          "step": 3,
          "action": "Navigate to previously visited pages",
          "expected": "Pages load from cache successfully"
        },
        {
          "step": 4,
          "action": "Try to navigate to new page",
          "expected": "Offline page shown OR cached fallback"
        },
        {
          "step": 5,
          "action": "Disable offline mode",
          "expected": "Network restored, pages load normally"
        }
